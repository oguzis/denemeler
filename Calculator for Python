print("HESAP MAKİNESİ")
index = 0
while  index <  int(1):
    a = int(input("ilk sayı"))
    b = int(input("ikinci sayı"))
    c = input("işlem")
    
    if  c == "+"  :
        print("Sonuc : ",a+b)
        
    elif c == "-" :
        print("Sonuc : ",a-b)
    elif c == "*" :
        print("Sonuc : ",a*b)
    elif c == "/" :
        print("Sonuc : ",a/b)
    else :
        print("Yanlıs tuslama yaptınız")
